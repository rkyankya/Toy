<div class="row">
  <div class="col"></div>
    <div class="col-6">
      <%= form_for(:session, url: login_path) do |f| %>
            
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <br>
        <%= f.submit 'Sign up!', class: 'btn btn-primary' %>
      <% end %>
    </div>
  <div class="col"></div>
</div>